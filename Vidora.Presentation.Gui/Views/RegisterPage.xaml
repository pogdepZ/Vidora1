<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Vidora.Presentation.Gui.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vidora.Presentation.Gui.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Background>
        <ImageBrush
            ImageSource="/Assets/AppSplash.png"
            Stretch="UniformToFill"/>
    </Page.Background>

    <Grid Background="#CC000000">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowSizeStates">
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RegisterForm.MinWidth" Value="400"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="LargeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RegisterForm.MinWidth" Value="480"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer
            VerticalScrollMode="Enabled"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel
                x:Name="RegisterForm" 
                Spacing="20" Padding="40,20" CornerRadius="5"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Style="{StaticResource HeaderExtraLargeTextBlockStyle}"
                        Text="Sign Up"/>
                    <HyperlinkButton
                        Grid.Column="1" Padding="0" CornerRadius="100"
                        NavigateUri="https://hcmus.edu.vn/">
                        <FontIcon Glyph="&#xF167;"/>
                    </HyperlinkButton>
                </Grid>

                <StackPanel Spacing="15">
                    <TextBox
                        PlaceholderText="Enter your email"
                        Padding="10"
                        FontSize="14"
                        IsSpellCheckEnabled="False"
                        Text="{x:Bind ViewModel.Email, Mode=TwoWay}"
                        BeforeTextChanging="EmailTextBox_BeforeTextChanging"
                        />

                    <TextBox
                        PlaceholderText="Enter your username"
                        Padding="10"
                        FontSize="14"
                        IsSpellCheckEnabled="False"
                        Text="{x:Bind ViewModel.Username, Mode=TwoWay}"
                        BeforeTextChanging="UsernameTextBox_BeforeTextChanging"
                        />

                    <TextBox
                        PlaceholderText="Enter your full name"
                        Padding="10"
                        FontSize="14"
                        IsSpellCheckEnabled="False"
                        Text="{x:Bind ViewModel.FullName, Mode=TwoWay}"
                        BeforeTextChanging="FullNameTextBox_BeforeTextChanging"
                        />

                    <PasswordBox
                        PlaceholderText="Enter your password"
                        Padding="10"
                        Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                        />

                    <PasswordBox
                        PlaceholderText="Confirm password"
                        Padding="10"
                        Password="{x:Bind ViewModel.ConfirmPassword, Mode=TwoWay}"
                        />
                    
                    <Button 
                        Margin="0,20,0,0"
                        Content="Register" 
                        Style="{StaticResource BrandButtonStyle}"
                        Command="{x:Bind ViewModel.RegisterCommand}"/>
                </StackPanel>


                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="5">
                    <TextBlock
                        Style="{StaticResource BodySmallTextBlockStyle}"
                        Text="Already have an account?"/>
                    <HyperlinkButton
                        FontSize="12"
                        Padding="0"
                        Content="Sign in"
                        Command="{x:Bind ViewModel.NavigateToLoginCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
