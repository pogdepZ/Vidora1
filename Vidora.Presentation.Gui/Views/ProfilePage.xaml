<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Vidora.Presentation.Gui.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <SolidColorBrush x:Key="BrandAccentBrush" Color="#E50914"/>
        <SolidColorBrush x:Key="GoldBrush" Color="#FFD700"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>


        <Style x:Key="FieldLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="FieldValueStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Canvas.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="56" Height="56"/>
                <TextBlock Text="Đang tải thông tin..." Opacity="0.7"/>
            </StackPanel>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Padding="48,40" MaxWidth="1200" MinWidth="800" HorizontalAlignment="Center">
                <StackPanel Spacing="32">

                    <!-- ═══════════════════════════════════════════════════════════════ -->
                    <!-- HEADER SECTION -->
                    <!-- ═══════════════════════════════════════════════════════════════ -->
                    <Grid ColumnSpacing="28">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Grid>
                            <!-- Avatar hiển thị bình thường (không edit hoặc không có ảnh mới) -->
                            <PersonPicture
                                Width="130"
                                Height="130"
                                ProfilePicture="{x:Bind ViewModel.CurrentUser.Avatar, Mode=OneWay}"
                                DisplayName="{x:Bind ViewModel.CurrentUser.FullName, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.HasNewAvatar, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>

                            <!-- Avatar Preview khi có ảnh mới -->
                            <Grid Visibility="{x:Bind ViewModel.HasNewAvatar, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Border Width="130" Height="130" CornerRadius="65">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{x:Bind ViewModel.PreviewAvatarSource, Mode=OneWay}" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <!-- Nút xóa ảnh preview -->
                                <Button
                                    Width="28"
                                    Height="28"
                                    CornerRadius="14"
                                    Padding="0"
                                    Background="#CC000000"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="0,-4,-4,0"
                                    Command="{x:Bind ViewModel.RemoveNewAvatarCommand}"
                                    ToolTipService.ToolTip="Xóa ảnh đã chọn">
                                    <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="White"/>
                                </Button>
                            </Grid>

                            <!-- Nút chọn ảnh (chỉ hiện khi đang edit) -->
                            <Button
                                Width="36"
                                Height="36"
                                CornerRadius="18"
                                Padding="0"
                                Style="{StaticResource AccentButtonStyle}"
                                Background="{StaticResource BrandAccentBrush}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Margin="0,0,-4,-4"
                                Command="{x:Bind ViewModel.PickAvatarCommand}"
                                ToolTipService.ToolTip="Chọn ảnh đại diện"
                                Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <FontIcon Glyph="&#xE722;" FontSize="14"/>
                            </Button>
                        </Grid>

                        <!-- Name & Email -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="10">
                            <TextBlock
                                Text="{x:Bind ViewModel.CurrentUser.FullName, Mode=OneWay}"
                                FontSize="32"
                                FontWeight="Bold"/>

                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE715;" FontSize="14" Opacity="0.6"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.CurrentUser.Email.Value, Mode=OneWay}"
                                        Opacity="0.7"
                                        FontSize="14"/>
                                </StackPanel>

                                <Border Width="1" Height="14" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>

                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE77B;" FontSize="14" Opacity="0.6"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.CurrentUser.Username, Mode=OneWay}"
                                        Opacity="0.7"
                                        FontSize="14"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Role Badge -->
                            <Border Background="{StaticResource BrandAccentBrush}"
                                    CornerRadius="6"
                                    Padding="14,6"
                                    HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE7EF;" FontSize="14" Foreground="White"/>
                                    <TextBlock Text="{x:Bind ViewModel.CurrentUser.Role, Mode=OneWay}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Error Message -->
                    <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                             Severity="Error"
                             Title="Lỗi"
                             Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                             IsClosable="True"/>

                    <!-- ═══════════════════════════════════════════════════════════════ -->
                    <!-- ACCOUNT INFORMATION CARD -->
                    <!-- ═══════════════════════════════════════════════════════════════ -->
                    <Border Padding="32"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <StackPanel Spacing="28">

                            <!-- Header -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Thông tin tài khoản" FontSize="20" FontWeight="Bold"/>
                                <TextBlock Text="Quản lý và cập nhật thông tin cá nhân của bạn" Opacity="0.5" FontSize="13"/>
                            </StackPanel>

                            <!-- Info Grid -->
                            <Grid ColumnSpacing="40" RowSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Full Name -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Họ và tên" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.CurrentUser.FullName, Mode=OneWay}"
                                        Style="{StaticResource FieldValueStyle}"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>
                                    <TextBox
                                        Text="{x:Bind ViewModel.EditFullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Nhập họ và tên"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- Username -->
                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <TextBlock Text="Tên người dùng" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.CurrentUser.Username, Mode=OneWay}"
                                        Style="{StaticResource FieldValueStyle}"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>
                                    <TextBox
                                        Text="{x:Bind ViewModel.EditUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Nhập tên người dùng"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- Gender -->
                                <StackPanel Grid.Row="1" Grid.Column="0">
                                    <TextBlock Text="Giới tính" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.CurrentUser.Gender, Mode=OneWay}"
                                        Style="{StaticResource FieldValueStyle}"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>
                                    <ComboBox
                                        ItemsSource="{x:Bind ViewModel.GenderOptions}"
                                        SelectedItem="{x:Bind ViewModel.EditGender, Mode=TwoWay}"
                                        HorizontalAlignment="Stretch"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- Birthday -->
                                <StackPanel Grid.Row="1" Grid.Column="1">
                                    <TextBlock Text="Ngày sinh" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.CurrentUser.Birthday, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}"
                                        Style="{StaticResource FieldValueStyle}"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>
                                    <CalendarDatePicker
                                        Date="{x:Bind ViewModel.EditBirthday, Mode=TwoWay, Converter={StaticResource DateTimeToDateTimeOffsetConverter}}"
                                        HorizontalAlignment="Stretch"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- Status -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="Trạng thái" Style="{StaticResource FieldLabelStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE930;" FontSize="16" Foreground="{StaticResource SuccessBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentUser.Status, Mode=OneWay}" Style="{StaticResource FieldValueStyle}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Member Since -->
                                <StackPanel Grid.Row="2" Grid.Column="1">
                                    <TextBlock Text="Ngày tham gia" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBlock
                                        Text="{x:Bind ViewModel.CurrentUser.CreatedAt, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}"
                                        Style="{StaticResource FieldValueStyle}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <!-- Edit Button -->
                                <Button Command="{x:Bind ViewModel.StartEditCommand}"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"
                                        Padding="20,10">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                        <TextBlock Text="Chỉnh sửa"/>
                                    </StackPanel>
                                </Button>

                                <!-- Save Button -->
                                <Button Command="{x:Bind ViewModel.SaveEditCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Background="{StaticResource BrandAccentBrush}"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Padding="20,10">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="10"
                                                    Visibility="{x:Bind ViewModel.IsSaving, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}">
                                            <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                            <TextBlock Text="Lưu thay đổi"/>
                                        </StackPanel>
                                        <ProgressRing IsActive="{x:Bind ViewModel.IsSaving, Mode=OneWay}"
                                                      Width="20" Height="20"
                                                      Foreground="White"/>
                                    </Grid>
                                </Button>

                                <!-- Cancel Button -->
                                <Button Content="Hủy"
                                        Command="{x:Bind ViewModel.CancelEditCommand}"
                                        Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                        IsEnabled="{x:Bind ViewModel.IsSaving, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                        Padding="20,10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- ═══════════════════════════════════════════════════════════════ -->
                    <!-- VIP PLAN CARD - KHI CÓ GÓI -->
                    <!-- ═══════════════════════════════════════════════════════════════ -->
                    <StackPanel>

                        <!-- ═══════════════════════════════════════════════════════════════ -->
                        <!-- HAS PLAN -->
                        <!-- ═══════════════════════════════════════════════════════════════ -->
                        <Border Padding="32" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource BrandAccentBrush}" Visibility="{x:Bind ViewModel.HasPlan, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{ThemeResource CardBackgroundFillColorDefaultBrush}" Offset="0"/>
                                    <GradientStop Color="{ThemeResource LayerFillColorAltBrush}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <StackPanel Spacing="24">

                                <!-- Header -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Spacing="14">
                                        <Border Background="{ThemeResource BrandAccentBrush}"
                                                Width="48" Height="48"
                                                CornerRadius="24">
                                            <FontIcon Glyph="&#xE735;" FontSize="22"
                                                      Foreground="{ThemeResource SystemAltHighColor}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Gói VIP hiện tại"
                                                       FontSize="14"
                                                       Opacity="0.7"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{x:Bind ViewModel.CurrentPlan.Name, Mode=OneWay}"
                                                       FontSize="24"
                                                       FontWeight="Bold"
                                                       Foreground="{ThemeResource BrandAccentBrush}" />


                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Days Remaining -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{x:Bind ViewModel.CurrentPlan.LeftDay, Mode=OneWay}"
                                                   FontSize="36"
                                                   FontWeight="Bold"
                                                   Foreground="{ThemeResource BrandAccentBrush}"
                                                   HorizontalAlignment="Right"/>
                                        <TextBlock Text="ngày còn lại"
                                                   FontSize="13"
                                                   Opacity="0.6"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Divider -->
                                <Border Height="1"
                                        Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                        Opacity="0.6"/>

                                <!-- Plan Details -->
                                <Grid ColumnSpacing="32" RowSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Spacing="6">
                                        <TextBlock Text="Giá gói"
                                                   FontSize="12"
                                                   Opacity="0.6"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentPlan.Price, Converter={StaticResource CurrencyConverter}, Mode=OneWay}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Spacing="6">
                                        <TextBlock Text="Ngày kích hoạt"
                                                   FontSize="12"
                                                   Opacity="0.6"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentPlan.StartDate, Converter={StaticResource DateTimeToStringConverter},Mode=OneWay}"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Spacing="6">
                                        <TextBlock Text="Ngày hết hạn"
                                                   FontSize="12"
                                                   Opacity="0.6"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentPlan.EndDate, Converter={StaticResource DateTimeToStringConverter}, Mode=OneWay}"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Status Badge -->
                                <Border Background="{ThemeResource BrandAccentBrush}"
                                        CornerRadius="8"
                                        Padding="16,10"
                                        HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE73E;" FontSize="14"
                                                  Foreground="{ThemeResource SystemAltHighColor}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentPlan.StatusLabel, Mode=OneWay}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{ThemeResource SystemAltHighColor}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Description -->
                                <Border Background="{ThemeResource LayerFillColorAltBrush}"
                                        CornerRadius="8"
                                        Padding="16">
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Mô tả gói"
                                                   FontSize="12"
                                                   Opacity="0.6"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{x:Bind ViewModel.CurrentPlan.Description, Mode=OneWay}"
                                                   TextWrapping="Wrap"
                                                   FontSize="14"
                                                   LineHeight="22"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                   Opacity="0.9"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- ═══════════════════════════════════════════════════════════════ -->
                        <!-- NO PLAN -->
                        <!-- ═══════════════════════════════════════════════════════════════ -->
                        <Border Padding="48,40" CornerRadius="12" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Visibility="{x:Bind ViewModel.HasPlan, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}">

                            <StackPanel Spacing="24" HorizontalAlignment="Center">

                                <Border Background="{ThemeResource BrandAccentBrush}"
                                        Width="100"
                                        Height="100"
                                        CornerRadius="50">
                                    <FontIcon Glyph="&#xE735;"
                                              FontSize="44"
                                              Foreground="{ThemeResource DangerBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>


                                <StackPanel Spacing="10" MaxWidth="360">
                                    <TextBlock Text="Bạn chưa có gói VIP"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               TextAlignment="Center"/>
                                    <TextBlock Text="Nâng cấp ngay để trải nghiệm nội dung độc quyền, xem phim không giới hạn và nhiều ưu đãi hấp dẫn khác!"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               Opacity="0.6"
                                               FontSize="14"
                                               LineHeight="22"/>
                                </StackPanel>

                                <Button Style="{StaticResource AccentButtonStyle}"
                                        Background="{ThemeResource BrandAccentBrush}"
                                        Padding="28,14"
                                        HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <FontIcon Glyph="&#xE735;" FontSize="18"/>
                                        <TextBlock Text="Khám phá các gói VIP"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>


                                <StackPanel Orientation="Horizontal" Spacing="24" Margin="0,16,0,0">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE73E;" FontSize="14"
                                                  Foreground="{ThemeResource DangerBrush}"/>
                                        <TextBlock Text="Không quảng cáo" FontSize="13" Opacity="0.8"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE73E;" FontSize="14"
                                                  Foreground="{ThemeResource DangerBrush}"/>
                                        <TextBlock Text="Chất lượng 4K" FontSize="13" Opacity="0.8"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE73E;" FontSize="14"
                                                  Foreground="{ThemeResource DangerBrush}"/>
                                        <TextBlock Text="Tải về xem offline" FontSize="13" Opacity="0.8"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
