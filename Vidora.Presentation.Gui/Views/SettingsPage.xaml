<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Vidora.Presentation.Gui.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vidora.Presentation.Gui.Views"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20,50,50,0" HorizontalAlignment="Center" RowSpacing="20">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PageContent_StackPanel.Width" Value="500"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PageContent_StackPanel.Width" Value="650"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="LargeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PageContent_StackPanel.Width" Value="900"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock
                Style="{StaticResource PageTitleTextBlockStyle}"
                Text="Settings"/>
            <TextBlock 
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="Manage your preferences and account"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="PageContent_StackPanel" Spacing="10" Orientation="Vertical" Padding="0,0,0,50">
                <TextBlock
                    Style="{StaticResource HeaderSmallTextBlockStyle}"
                    Text="Personalization"/>
                <StackPanel
                    CornerRadius="5" BorderThickness="1" Margin="0,0,0,30"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                    <Grid
                        Padding="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="5">
                            <TextBlock
                                Style="{StaticResource BodyMediumStrongTextBlockStyle}"
                                Text="Theme"/>
                            <TextBlock
                                Style="{StaticResource BodySmallTextBlockStyle}"
                                Text="Choose how the app looks" />
                        </StackPanel>

                        <ComboBox
                            ItemsSource="{x:Bind ViewModel.ElementThemes, Mode=OneWay}"
                            SelectedItem="{x:Bind ViewModel.SelectedTheme, Mode=TwoWay}"
                            Grid.Column="1" Width="125">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="xaml:ElementTheme">
                                    <TextBlock Text="{x:Bind}" Style="{StaticResource BodyTextBlockStyle}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <Rectangle HorizontalAlignment="Stretch" Height="1" Fill="{ThemeResource SystemBaseLowColor}"/>

                    <Grid Padding="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="5">
                            <TextBlock
                                Style="{StaticResource BodyMediumStrongTextBlockStyle}"
                                Text="Language"/>
                            <TextBlock
                                Style="{StaticResource BodySmallTextBlockStyle}"
                                Text="Select your preferred language" />
                        </StackPanel>

                        <ComboBox Grid.Column="1" Width="125" FontSize="14">
                            <ComboBoxItem IsSelected="True">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="English"/>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Vietnamese"/>
                            </ComboBoxItem>
                        </ComboBox>
                    </Grid>

                    <Rectangle HorizontalAlignment="Stretch" Height="1" Fill="{ThemeResource SystemBaseLowColor}"/>

                    <Grid Padding="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="5">
                            <TextBlock
                                Style="{StaticResource BodyMediumStrongTextBlockStyle}"
                                Text="Notifications"/>
                            <TextBlock
                                Style="{StaticResource BodySmallTextBlockStyle }"
                                Text="Receive app notifications"/>
                        </StackPanel>

                        <ToggleSwitch Grid.Column="1" Padding="0" Margin="0" HorizontalContentAlignment="Center" FlowDirection="RightToLeft"/>
                    </Grid>

                </StackPanel>

                <TextBlock
                    Style="{StaticResource HeaderSmallTextBlockStyle}"
                    Text="Memories"/>
                <StackPanel
                    CornerRadius="5" BorderThickness="1" Margin="0,0,0,30"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                    <Grid Padding="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="5">
                            <TextBlock
                                Style="{StaticResource BodyMediumStrongTextBlockStyle}"
                                Text="Clear Cache"/>
                            <TextBlock
                                Style="{StaticResource BodySmallTextBlockStyle}"
                                Text="Remove cached data to free up space"/>
                        </StackPanel>

                        <Button Grid.Column="1" Margin="0" Width="125">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon FontSize="14" Glyph="&#xE74D;"/>
                                <TextBlock FontSize="14" Text="Clear"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>

                <TextBlock
                    Style="{StaticResource HeaderSmallTextBlockStyle}"
                    Text="About"/>
                <Grid 
                    Padding="20,10" RowSpacing="10" Margin="0,0,0,90" CornerRadius="5" BorderThickness="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="App name"/>
                    <TextBlock
                        Grid.Row="0" Grid.Column="1"
                        VerticalAlignment="Bottom" HorizontalAlignment="Right"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="Vidora"/>

                    <TextBlock
                        Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="Version"/>
                    <TextBlock
                        Grid.Row="1" Grid.Column="1"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        VerticalAlignment="Bottom" HorizontalAlignment="Right"
                        Text="{x:Bind ViewModel.VersionDescription, Mode=OneWay}"/>

                    <TextBlock
                        Grid.Row="2" Grid.Column="0"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="License"/>
                    <TextBlock
                        Grid.Row="2" Grid.Column="1"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        VerticalAlignment="Bottom" HorizontalAlignment="Right"
                        Text="MIT License"/>
                </Grid>

                <Button
                    MinHeight="40"
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind ViewModel.ExecuteLogoutCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Bottom">
                        <FontIcon FontSize="14" FontFamily="Segoe MDL2 Assets" Glyph="&#xF3B1;"/>
                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Logout"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
