<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Vidora.Presentation.Gui.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vidora.Presentation.Gui.Views"
    xmlns:models="using:Vidora.Presentation.Gui.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="HomePageRoot"
    mc:Ignorable="d">

    <Page.Resources>
        <StackLayout x:Name="VerticalStackLayout" Orientation="Horizontal" Spacing="15"/>

        <DataTemplate x:Key="HeroSectionItemDataTemplate" x:DataType="models:Movie">
            <local:HeroSectionItemControl Movie="{x:Bind}"/>
        </DataTemplate>
        
        <DataTemplate x:Key="SectionItemDataTemplate" x:DataType="models:Movie">
            <Button
                Padding="0"
                Background="Transparent"
                Height="100" Width="160"
                BorderThickness="0">
                <Image
                    HorizontalAlignment="Right"
                    Source="{x:Bind BannerUrl}"
                    Stretch="UniformToFill"/>
            </Button>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates">
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TrendingText.Style" Value="{StaticResource HeaderSmallTextBlockStyle}"/>
                        <Setter Target="RecommendedText.Style" Value="{StaticResource HeaderSmallTextBlockStyle}"/>
                        <Setter Target="NewReleaseText.Style" Value="{StaticResource HeaderSmallTextBlockStyle}"/>
                        <Setter Target="ContinueWatchingText.Style" Value="{StaticResource HeaderSmallTextBlockStyle}"/>

                        <Setter Target="HomeSectionsPanel.Padding" Value="10,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="LargeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TrendingText.Style" Value="{StaticResource HeaderTextBlockStyle}"/>
                        <Setter Target="RecommendedText.Style" Value="{StaticResource HeaderTextBlockStyle}"/>
                        <Setter Target="NewReleaseText.Style" Value="{StaticResource HeaderTextBlockStyle}"/>
                        <Setter Target="ContinueWatchingText.Style" Value="{StaticResource HeaderTextBlockStyle}"/>
                        
                        <Setter Target="HomeSectionsPanel.Padding" Value="20,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="HomeSectionsPanel" Spacing="30">
                <Grid x:Name="HeroSection">
                    <FlipView
                        ItemsSource="{x:Bind ViewModel.HeroItems, Mode=OneWay}"
                        SelectedIndex="{x:Bind ViewModel.SelectedHeroIndex, Mode=TwoWay}"
                        ItemTemplate="{StaticResource HeroSectionItemDataTemplate}"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        SizeChanged="HeroSection_SizeChanged"/>

                    <PipsPager
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,50"
                        SelectedPageIndex="{x:Bind ViewModel.SelectedHeroIndex, Mode=TwoWay}"
                        NumberOfPages="{x:Bind ViewModel.HeroItems.Count, Mode=OneWay}"
                        HorizontalAlignment="Center"/>
                </Grid>

                <StackPanel x:Name="TrendingSection" Spacing="10" Padding="20,0,0,0">
                    <TextBlock
                        x:Name="TrendingText"
                        Text="Trending"
                        Style="{StaticResource HeaderTextBlockStyle}"/>
                    <ScrollViewer HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Hidden">
                        <ItemsRepeater
                            ItemsSource="{x:Bind ViewModel.TrendingItems, Mode=OneWay}"
                            ItemTemplate="{StaticResource SectionItemDataTemplate}"
                            Layout="{StaticResource VerticalStackLayout}"
                            Background="Transparent">
                        </ItemsRepeater>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel x:Name="RecommendedSection" Spacing="10" Padding="20,0,0,0">
                    <TextBlock
                        x:Name="RecommendedText"
                        Text="Recommended"
                        Style="{StaticResource HeaderTextBlockStyle}"/>
                    <ScrollViewer HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Hidden">
                        <ItemsRepeater
                            ItemsSource="{x:Bind ViewModel.RecommendedItems, Mode=OneWay}"
                            ItemTemplate="{StaticResource SectionItemDataTemplate}"
                            Layout="{StaticResource VerticalStackLayout}"
                            Background="Transparent">
                        </ItemsRepeater>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel x:Name="NewReleaseSection" Spacing="10" Padding="20,0,0,0">
                    <TextBlock
                        x:Name="NewReleaseText"
                        Text="New release"
                        Style="{StaticResource HeaderTextBlockStyle}"/>

                    <ScrollViewer HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Hidden">
                        <ItemsRepeater
                            ItemsSource="{x:Bind ViewModel.NewReleaseItems, Mode=OneWay}"
                            ItemTemplate="{StaticResource SectionItemDataTemplate}"
                            Layout="{StaticResource VerticalStackLayout}"
                            Background="Transparent">
                        </ItemsRepeater>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel x:Name="ContinueWatchingSection" Spacing="10" Padding="20,0,0,0">
                    <TextBlock
                        x:Name="ContinueWatchingText"
                        Text="Continue Watching"
                        Style="{StaticResource HeaderTextBlockStyle}"/>

                    <ScrollViewer HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Hidden">
                        <ItemsRepeater
                            ItemsSource="{x:Bind ViewModel.ContinueWatchingItems, Mode=OneWay}"
                            ItemTemplate="{StaticResource SectionItemDataTemplate}"
                            Layout="{StaticResource VerticalStackLayout}"
                            Background="Transparent">
                        </ItemsRepeater>
                    </ScrollViewer>
                </StackPanel>

                <Rectangle Height="100"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
