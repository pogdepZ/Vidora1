<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Vidora.Presentation.Gui.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Vidora.Presentation.Gui.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="SearchPageRoot">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20,30,50,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Padding="24,16,24,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title & Search -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Text="Search"
                    FontSize="24"
                    FontWeight="Bold"/>

                <!-- Search Box -->

            </Grid>

            <!-- Filter Bar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                <!-- Genre -->

                <Grid HorizontalAlignment="Right" MinWidth="400">
                    <TextBox
                        PlaceholderText="Tìm kiếm phim..."
                        Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Padding="40,10,12,10"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}">
                        <TextBox.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Enter" Invoked="SearchBox_EnterPressed"/>
                        </TextBox.KeyboardAccelerators>
                    </TextBox>
                    <FontIcon
                        Glyph="&#xE721;"
                        FontSize="14"
                        HorizontalAlignment="Left"
                        Margin="14,0,0,0"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        IsHitTestVisible="False"/>
                </Grid>

                <ComboBox
                    PlaceholderText="Thể loại"
                    ItemsSource="{x:Bind ViewModel.Genres, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedGenre, Mode=TwoWay}"
                    DisplayMemberPath="Name"
                    MinWidth="140"
                    Padding="10,10,0,10"
                    CornerRadius="6"/>

                <!-- Year -->
                <ComboBox
                    PlaceholderText="Năm"
                    ItemsSource="{x:Bind ViewModel.Years}"
                    SelectedItem="{x:Bind ViewModel.SelectedYear, Mode=TwoWay}"
                    MinWidth="100"
                    Padding="10,10,0,10"
                    CornerRadius="6"/>

                <!-- Search Button -->
                <Button
                    Command="{x:Bind ViewModel.SearchCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    Padding="10,10,12,10"

                    CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE721;" FontSize="12"/>
                        <TextBlock Text="Tìm kiếm"/>
                    </StackPanel>
                </Button>

                <!-- Clear -->
                <Button
                    Command="{x:Bind ViewModel.ClearFiltersCommand}"
                    Padding="16,8"
                    CornerRadius="6"
                    ToolTipService.ToolTip="Xóa bộ lọc">
                    <FontIcon Glyph="&#xE894;" FontSize="14"/>
                </Button>

                <!-- Results Count -->

            </StackPanel>
        </Grid>

        <!-- Content Section -->
        <Grid Grid.Row="1">
            <!-- Loading -->
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="12"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Đang tìm kiếm..." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Empty State -->
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="12"
                Visibility="{x:Bind ViewModel.HasResults, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}">
                <StackPanel Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}">
                    <FontIcon
                        Glyph="&#xE8B2;"
                        FontSize="48"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12"/>
                    <TextBlock
                        Text="Không tìm thấy phim"
                        FontSize="16"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"/>
                    <TextBlock
                        Text="Thử tìm kiếm với từ khóa khác"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Movie Grid -->
            <ScrollViewer
                VerticalScrollMode="Enabled"
                VerticalScrollBarVisibility="Auto"
                Padding="24,0,24,24"
                Visibility="{x:Bind ViewModel.HasResults, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Spacing="20">
                    <!-- Movie Grid -->
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.SearchResults, Mode=OneWay}">
                        <ItemsRepeater.Layout>
                            <UniformGridLayout
                                MinItemWidth="180"
                                MinItemHeight="300"
                                MinColumnSpacing="16"
                                MinRowSpacing="16"
                                ItemsStretch="Fill"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:Movie">
                                <Button
                                    Command="{Binding ViewModel.ViewMovieDetailCommand, ElementName=SearchPageRoot}"
                                    CommandParameter="{x:Bind}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="8">
                                    <Grid CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Poster -->
                                        <Grid Grid.Row="0" CornerRadius="8,8,0,0">
                                            <!-- Image -->
                                            <Image
                                                Source="{x:Bind PosterUrl}"
                                                Stretch="UniformToFill"/>

                                            <!-- Fallback -->


                                            <!-- Rating Badge -->
                                            <Border
                                                Background="#E50914"
                                                CornerRadius="4"
                                                Padding="6,3"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Margin="8">
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <FontIcon Glyph="&#xE735;" FontSize="10" Foreground="White"/>
                                                    <TextBlock
                                                        Text="{x:Bind AvgRating}"
                                                        FontSize="11"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Year Badge -->
                                            <Border
                                                Background="#80000000"
                                                CornerRadius="4"
                                                Padding="6,3"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="8">
                                                <TextBlock
                                                    Text="{x:Bind ReleaseYear}"
                                                    FontSize="11"
                                                    Foreground="White"/>
                                            </Border>
                                        </Grid>

                                        <!-- Info -->
                                        <StackPanel Grid.Row="1" Padding="10,8,10,10" Spacing="2">
                                            <TextBlock
                                                Text="{x:Bind Title}"
                                                FontWeight="SemiBold"
                                                FontSize="13"
                                                TextTrimming="CharacterEllipsis"
                                                MaxLines="2"
                                                TextWrapping="Wrap"
                                                ToolTipService.ToolTip="{x:Bind Title}"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                    <!-- Pagination -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16,12"
                        HorizontalAlignment="Center"
                        Visibility="{x:Bind ViewModel.HasResults, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

                        <!-- Grid 3 cột: Trước | Trang | Sau -->
                        <Grid ColumnDefinitions="Auto,*,Auto"
                              VerticalAlignment="Center"
                              MinWidth="420">

                            <!-- NÚT TRƯỚC -->
                            <Button
                                Grid.Column="0"
                                Command="{x:Bind ViewModel.PreviousPageCommand}"
                                IsEnabled="{x:Bind ViewModel.CanGoPrevious, Mode=OneWay}"
                                Padding="12,6"
                                CornerRadius="6">

                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE76B;" FontSize="12"/>
                                    <TextBlock Text="Trước"/>
                                </StackPanel>
                            </Button>

                            <!-- TRANG (FIXED + CENTER) -->
                            <Border
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Padding="12,6">

                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="6"
                                    VerticalAlignment="Center">



                                    <Border
                                        Background="#E50914"
                                        CornerRadius="4"
                                        Padding="10,4">
                                        <TextBlock
                                            Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}"
                                            FontWeight="Bold"
                                            Foreground="White"/>
                                    </Border>

                                    <TextBlock
                                        Text="/"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                    <Border
                                        Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                        CornerRadius="4"
                                        Padding="10,4">
                                        <TextBlock
                                            Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                                            FontWeight="Bold"/>
                                    </Border>

                                </StackPanel>
                            </Border>

                            <!-- NÚT SAU -->
                            <Button
                                Grid.Column="2"
                                Command="{x:Bind ViewModel.NextPageCommand}"
                                IsEnabled="{x:Bind ViewModel.CanGoNext, Mode=OneWay}"
                                Padding="12,6"
                                CornerRadius="6">

                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="Sau"/>
                                    <FontIcon Glyph="&#xE76C;" FontSize="12"/>
                                </StackPanel>
                            </Button>

                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>